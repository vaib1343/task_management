model User {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    firstName String
    lastName  String
    email     String @unique
    password  String
}

model Task {
    id             String   @id @default(auto()) @map("_id") @db.ObjectId
    name           String
    description    String
    priority       Priority @default(P1)
    label          String
    dateCompletion DateTime
    status         Status   @default(TODO)
}

enum Status {
    TODO
    PENDING
    DONE
}

enum Priority {
    P1
    P2
    P3
}
